<h1>Log In</h1>
<div class="form-container">
	<%= form_for(:session, url: login_path) do |f| %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit 'Log In', class: 'button' %>
	<% end %>

</div>
<div class="left">Don't have an account? <%= link_to "Sign up now!", signup_path %></div>